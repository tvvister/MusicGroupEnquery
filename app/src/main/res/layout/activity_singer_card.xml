<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >
    <data>
        <variable name="info" type="com.maintwister.musicgroupfile.model.SingerInfo" />
    </data>

    <LinearLayout
        android:orientation="vertical">
    <ScrollView android:id="@+id/ScrlView" android:layout_width="fill_parent" android:layout_height="fill_parent" >
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:imageUrl="@{info.big}"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

            <TextView android:layout_width="match_parent"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
                android:text="@{info.genresString}" />
            <TextView android:layout_width="match_parent"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
                android:text="@{info.musicCount2}"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/desc_title"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{info.description}"/>


    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</layout>